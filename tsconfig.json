{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"]
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}